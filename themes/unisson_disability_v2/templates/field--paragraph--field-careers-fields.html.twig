{% set tab_count = 1 %}
<ul id="myTab" class="nav nav-tabs careers">
{% for item in items %}
	  {% if tab_count == 1 %}	
      <li class="active"><a data-toggle="tab" href="#tab{{ tab_count }}">{{ item.content['#field_collection_item'].field_careers_heading.value }}</a></li>
      {% else %}
      <li class=""><a data-toggle="tab" href="#tab{{ tab_count }}">{{ item.content['#field_collection_item'].field_careers_heading.value }}</a></li>
      {% endif %}
      {% set tab_count = tab_count + 1 %}
{% endfor %}
</ul>


{% set tab_count = 1 %}
<div class="tab-content">
{% for item in items %}
     {% if tab_count == 1 %}	
      <div id="tab{{ tab_count }}" class="tab-pane fade in active">
      <div class="panel-group" id="accordion">
      		{{ item.content }}
      </div>
      </div>
      {% else %}
      <div id="tab{{ tab_count }}" class="tab-pane fade">
      <div class="panel-group" id="accordion">
      		{{ item.content }}
      </div>
      </div>
      {% endif %}
      {% set tab_count = tab_count + 1 %}
{% endfor %}
</div>